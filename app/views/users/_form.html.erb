<%= form_with(model: @user, local: true) do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name, class: 'mb-3 form-control' %>

    <%= f.label :email %>
    <%= f.email_field :email, class: 'mb-3 form-control' %>

    <%= f.label :password %>
    <%= f.password_field :password, class: 'mb-3 form-control' %>

    <%= f.label :password_confirmation, "Password Confirmation" %>
    <%= f.password_field :password_confirmation, class: 'mb-3 form-control' %>

    <%= f.submit yield(:button_text), class: "mt-2 btn btn-primary" %>
    
<% end %>
